<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Title -->
    <style name="TextAppearance.Komplete.Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:alpha">0.92</item>
    </style>

    <!-- Header1 -->
    <style name="TextAppearance.Komplete.Header1" parent="TextAppearance.Komplete.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Header1 white -->
    <style name="TextAppearance.Komplete.Header1.White" parent="TextAppearance.Komplete.Header1">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Header2 -->
    <style name="TextAppearance.Komplete.Header2" parent="TextAppearance.Komplete.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Header2 white -->
    <style name="TextAppearance.Komplete.Header2.White" parent="TextAppearance.Komplete.Header2">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Normal text -->
    <style name="TextAppearance.Komplete.NormalText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:alpha">0.92</item>
    </style>

    <!-- Normal text light -->
    <style name="TextAppearance.Komplete.NormalText.Light" parent="TextAppearance.Komplete.NormalText">
        <item name="android:alpha">0.6</item>
    </style>

    <!-- Normal text white -->
    <style name="TextAppearance.Komplete.NormalText.White" parent="TextAppearance.Komplete.NormalText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TextInputLayout1 -->
    <style name="Widget.ShoppingKart.TextInputLayout1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/open_sans</item>
<!--        <item name="startIconTint">@color/burnt_sienna</item>-->
    </style>

    <!-- Custom button -->
    <style name="Widget.Komplete.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_custom_background</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:height">60dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>